<Application x:Class="InsuranceCompany.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:InsuranceCompany"
             Startup="Application_Startup">
    <Application.Resources>
        <SolidColorBrush x:Key="MainColor" Color="#FF37474F" ></SolidColorBrush>
        <SolidColorBrush x:Key="SecondColor" Color="#FF788C9C" ></SolidColorBrush>
        <SolidColorBrush x:Key="AccentColor" Color="#FFFF9C1A" ></SolidColorBrush>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Tw Cen MT"></Setter>
        </Style>
    </Application.Resources>
</Application>
