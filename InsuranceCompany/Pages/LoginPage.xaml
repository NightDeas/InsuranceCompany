<Page x:Class="InsuranceCompany.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InsuranceCompany.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel MinWidth="150" MaxWidth="250" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="24" Margin="10,5" HorizontalAlignment="Center" Text="Авторизация"></TextBlock>
            <TextBlock FontSize="16" Margin="10,5" HorizontalAlignment="Center" Text="Логин"></TextBlock>
            <TextBox FontSize="16" Margin="10,5" x:Name="LoginTb"></TextBox>
            <TextBlock FontSize="16" Margin="10,5" HorizontalAlignment="Center" Text="Пароль"></TextBlock>
            <PasswordBox FontSize="16" Margin="10,5" x:Name="PasswordPb"></PasswordBox>
            <Button FontSize="16" Margin="10,5" x:Name="BtnLogin" Content="Вход" Click="BtnLogin_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
